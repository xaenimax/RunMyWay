<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:text="@string/welcome_string"
        android:textStyle="bold"
        android:textSize="@dimen/main_title_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/today_achievement_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:text="@string/look_at_activies"
        android:textSize="@dimen/sub_title_text_size"
        app:layout_constraintStart_toStartOf="@id/welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/welcome_tv"
        />
    <TextView
        android:id="@+id/today_achievement_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/distance_no_data"
        app:layout_constraintStart_toStartOf="@id/welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/today_achievement_tv"
        />
    <TextView
        android:id="@+id/today_achievement_calory_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_no_data"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toStartOf="@id/welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/today_achievement_distance_tv"
        />

    <TextView
        android:id="@+id/last_session_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:textStyle="bold"
        android:text="@string/last_session"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toStartOf="@id/welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/today_achievement_calory_tv"
        />
    <TextView
        android:id="@+id/last_session_recap_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toStartOf="@id/welcome_tv"
        app:layout_constraintTop_toBottomOf="@id/last_session_tv"
        />
    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/last_session_recap_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:src="@mipmap/play"
        android:contentDescription="@string/play_button"/>
</android.support.constraint.ConstraintLayout>